{
    "name" : "ledit",
    "version" : "0.0.9",
    "window_width" : 1400,
    "window_height" : 800,

    "empty_file_name" : "Untitled",

    "color_theme" : "standart",

    "keybinds" : {
        "new_file"  : "<Control-Key-n>",
        "open_file" : "<Control-Key-o>",
        "save_file" : "<Control-Key-s>",
        "save_as"   : "<Control-S>",
        
        "open_directory" : "<Control-Key-k>",

        "focus_command_line" : "<Control-Key-e>",

        "select_text" : "<Control-Key-a>"
    },

    "commands" : {
        "move" : "mv",

        "replace" : {
            "name" : "rp",
            "separator" : "|",
            "all_key" : "a",
            "one_key" : "o"
        },

		"open" : {
			"name" : "op"
        },
        
        "open_directory" : {
            "name" : "od"
        },

        "update_config" : {
            "name" : "cfg"
        }
    },

    "tab_size" : 4,

    "font" : "Code New Roman",
    "font_size" : 13,
    "command_font" : "Code New Roman",
    "command_font_size" : 11,

    "fixed_screen_size" : false,
    "adaptive_screen_size" : false,
    "adaptive_screen_size_percentage" : 0.5,

    "fullscreen_mode" : false,
    "directory_tree": true,
    "command_line" : true, 
    "num_of_lines" : true,
    "scrollbar" : false,

    "complete_quotes" : false,
    "complete_brackets" : false,
    "complete_indentations" : true
}

