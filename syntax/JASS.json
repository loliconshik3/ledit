{
    "file_extension" : ["j"],

    "string_color" : "#ce9178",
    "comment_symbol" : "//",
    "comment_color" : "#6a9947",

    "syntax_accept_chars" : [
        null, "", " ", "(", ")", "{", "}", "[", "]", ":", ".", "=", ","
    ],

    "function_syntax" : "function {name} takes",
    "function_color" : "#dcc46c",

    "classes" : {

        "base_class" : {
            "color" : "#ff3a66",
            "color_everywhere" : false,
            
            "syntax_list" : [
                "local", "if", "then", "elseif", "else", "endif", "function", "endfunction", "library", "endlibrary",
                "initializer", "private", "globals", "endglobals", "takes", "returns", "return", "set", "call",
                "loop", "endloop", "exitwhen"
            ]
        },

        "variable_class" : {
            "color" : "#0055c8",
            "color_everywhere" : false,
            
            "syntax_list" : [
                "unit", "location", "integer", "real", "group", "string", "ability", "hashtable",
				"abilcode", "attacktype", "boolean", "buff", "weapontype", "camerasetup", "damagetype",
				"destructable", "dialog", "button", "effecttype", "texttag", "gamecache", "gamespeed",
				"image", "item", "itemtype", "itemcode", "leaderboard", "lightning", "multiboard",
				"ordercode", "player", "playercolor", "force", "quest", "questitem", "race", "rect",
				"sound", "soundtype", "effect", "techcode", "timer", "timerdialog", "unitcode", "boolexpr",
				"event", "triggeraction", "triggercondition", "region", "heroskill", "trackable", "multiboarditem",
                "nothing", "null", "true", "false", "trigger"
            ]
        },

        "math_class" : {
            "color" : "#aa5500",
            "color_everywhere" : true,

            "syntax_list" : [
                "*", "+", "/", "-", "="
            ]
        }
    },

    "macros" : {
        "function" : "function name takes nothing returns nothing\n\tcall DoNothing()\nendfunction",
        "loop" : "loop\n\texitwhen index > num\n\tcall DoNothing()\n\tset index = index + 1\nendloop"
    }
}
